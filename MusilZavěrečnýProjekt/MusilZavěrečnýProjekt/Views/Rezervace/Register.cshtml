@model MusilZavìreènýProjekt.Models.UserViewModel

<div class="auth-page">
    <div class="auth-card">
        <h2>Registrace</h2>
        @foreach (var msg in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-muted-light">@msg.ErrorMessage</div>
        }
        <form asp-action="Register" method="post">
            <div class="form-group">
                <input asp-for="Username" class="form-control auth-input" placeholder="Uživatelské jméno" />
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control auth-input" placeholder="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control auth-input" placeholder="Heslo" />
            </div>
            <div class="form-group">
                <button class="btn-auth" type="submit">Zaregistrovat</button>
            </div>
        </form>
        <div class="auth-footer">Máte úèet? <a asp-action="Login">Pøihlásit se</a></div>
    </div>
</div>
